{
  "name": "scaffold",
  "description": "Minimally-flavoured Alchira scaffold for small, non-production projects.",
  "version": "0.0.0",
  "scripts": {
    "lib:build": "npx sass libraries-src:libraries --no-source-map",
    "lib:watch": "npx sass --watch libsource:libraries --no-source-map",
    "box:build": "npx al preview",
    "box:watch": "npx al watch",
    "build": "npm install && npm run lib:build && npm run box:build"
  },
  "type": "module",
  "license": "MIT",
  "homepage": "https://www.alchira.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/alchira/scaffold"
  },
  "author": {
    "name": "Vyshnav Prasad",
    "url": "https://www.yshell.dev"
  },
  "bugs": {
    "url": "https://github.com/alchira/scaffold/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/yshelldev"
  },
  "keywords": [
    "css",
    "alchira-template",
    "css-framework"
  ],
  "devDependencies": {
    "sass": "latest"
  },
  "dependencies": {
    "alchira": "latest"
  }
}